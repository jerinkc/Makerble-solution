<!DOCTYPE html>
<html>
  <head>
    <title>MarkerablSolution</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <div class=" position-absolute top-50 end-0">
      <% if notice.present? %>
        <div class="toast align-items-center text-bg-warning border-0" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <button type="button" class="btn-close btn-close-white me-2 ms-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            <div class="toast-body">
              <%= notice %>
            </div>
          </div>
        </div>
      <% end %>
      <% if alert.present?  %>
        <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <button type="button" class="btn-close btn-close-white me-2 ms-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            <div class="toast-body">
              <%= alert %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
